  "description": "{{ site.description }}",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "{{ site.topbar_color }}",
  "icons": [
    {
      "src": "{{ site.app_icon | relative_url }}",
      "sizes": "512x512",
      "type": "image/png",
