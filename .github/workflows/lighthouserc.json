{
  "ci": {
    "collect": {
      "settings": {
        "preset": "desktop",
        "onlyCategories": ["performance", "accessibility", "best-practices", "seo"],
        "skipAudits": ["redirects"]
      }
    },
    "assert": {
      "assertions": {
        "uses-rel-preconnect": "error",
        "meta-description": "error",
        "document-title": "error",
        "html-has-lang": "error",
        "html-lang-valid": "error",
        "meta-viewport": "error",
        "structured-data": "error",
        "semantic-heading-tags": "error",
        "heading-order": "error",
        "tap-targets": "error",
        "link-name": "error",
        "link-text": "error",
        "image-alt": "error",
        "uses-optimized-images": "error",
        "uses-text-compression": "error",
        "uses-responsive-images": "error",
        "preload-key-requests": "error",
        "server-response-time": ["error", {"minScore": 0.9}],
        "first-contentful-paint": ["error", {"minScore": 0.9}],
        "largest-contentful-paint": ["error", {"minScore": 0.9}],
        "total-blocking-time": ["error", {"minScore": 0.9}],
        "cumulative-layout-shift": ["error", {"minScore": 0.9}],
        "speed-index": ["error", {"minScore": 0.9}],
        "robots-txt": "error",
        "canonical": "error",
        "font-display": "error",
        "plugins": "error",
        "viewport": "error",
        "aria-required-attr": "error",
        "aria-roles": "error",
        "doctype": "error",
        "charset": "error",
        "valid-source-maps": "error",
        "js-libraries": "error",
        "deprecations": "error",
        "mainthread-work-breakdown": ["error", {"minScore": 0.9}]
      }
    }
  }
}
